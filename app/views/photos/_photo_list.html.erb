<% if @photos.any? %>
    <br /><br />

    <div class="row">
        <% @photos.each do |photo| %>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header preview">
                        <%= image_tag photo.image.url%>
                    </div>
                    <div class="card-body">
                        <span class="pull-right">
                            <%= link_to room_photo_path(photo.room_id, photo), 
                                        remote: true, 
                                        method: :delete,
                                        data: { confirm: "Are you sure?" } do %>
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            <% end %>
                        </span>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<% end %>